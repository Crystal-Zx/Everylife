<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="用户名:"
            android:textSize="18sp"
            android:textColor="#502f16"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_horizontal"
            android:padding="2dp"
            android:hint="请输入您的用户名"
            android:background="@drawable/boder_log"
            android:textColor="#502f16"
            android:textColorHint="#32502f16"
            android:textCursorDrawable="@drawable/cursor_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="密码:"
            android:textSize="18sp"
            android:textColor="#502f16"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/user_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_horizontal"
            android:padding="2dp"
            android:hint="请输入您的密码"
            android:password="true"
            android:background="@drawable/boder_log"
            android:textColor="#502f16"
            android:textColorHint="#32502f16"
            android:textCursorDrawable="@drawable/cursor_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="确认密码:"
            android:textSize="18sp"
            android:textColor="#502f16"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/user_psw_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_horizontal"
            android:padding="2dp"
            android:hint="请再次确认您的密码"
            android:password="true"
            android:background="@drawable/boder_log"
            android:textColor="#502f16"
            android:textColorHint="#32502f16"
            android:textCursorDrawable="@drawable/cursor_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="手机号:"
            android:textSize="18sp"
            android:textColor="#502f16"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_horizontal"
            android:padding="2dp"
            android:hint="请使用您的常用手机号，便于密码找回喔"
            android:background="@drawable/boder_log"
            android:textColor="#502f16"
            android:textColorHint="#32502f16"
            android:textCursorDrawable="@drawable/cursor_style"
            android:phoneNumber="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="邮箱:"
            android:textSize="18sp"
            android:textColor="#502f16"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_horizontal"
            android:padding="2dp"
            android:hint="请使用您的常用邮箱，便于密码找回喔"
            android:background="@drawable/boder_log"
            android:textColor="#502f16"
            android:textColorHint="#32502f16"
            android:textCursorDrawable="@drawable/cursor_style"
            />
        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="注册"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/btn_log_style"/>
    </LinearLayout>




</LinearLayout>
