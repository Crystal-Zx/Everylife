<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/egg">
        <ImageButton
            android:id="@+id/fit_record_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/egg"
            android:layout_alignParentLeft="true"
            android:src="@drawable/top_tab_back_2"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="记录查询"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/fit_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:text="2018.5.15"
            android:textColor="@color/orange1"
            android:textSize="40sp"
            android:textStyle="italic" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fit_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="步行数"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/fit_record_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/unit_1"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:inputType="numberDecimal"
            android:hint="0"
            android:text="0.0"
            android:textColorHint="@color/white"
            android:textSize="28sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/unit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="步"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fit_background_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="消耗能量"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/fit_record_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/unit_2"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:inputType="numberDecimal"
            android:hint="0"
            android:text="0.0"
            android:textColorHint="@color/white"
            android:textSize="28sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/unit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="卡"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fit_background_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:text="摄入能量"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/fit_record_nutrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/unit_3"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:inputType="numberDecimal"
            android:hint="0"
            android:text="0.0"
            android:textColorHint="@color/white"
            android:textSize="28sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/unit_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="卡"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>