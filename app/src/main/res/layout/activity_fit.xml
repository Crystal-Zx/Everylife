<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fit_bg">

    <ImageButton
        android:id="@+id/fit_save"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/top_tab_save_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/egg"/>
    <ImageButton
        android:id="@+id/fit_record"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/record_pic"
        android:layout_below="@id/fit_save"
        android:layout_alignParentRight="true"
        android:background="@color/egg"/>
    <TextView
        android:id="@+id/step_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="今日步数"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/step_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/step_str"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="0.0"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tips"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/to_energy_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@drawable/to_energy"
                />
            <TextView
                android:id="@+id/energy_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.0"
                android:textSize="40sp"
                android:textColor="@color/egg"/>
        </LinearLayout>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/egg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/to_nutrition_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/to_nutrition"/>
            <TextView
                android:id="@+id/nutrition_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.0"
                android:textSize="40sp"
                android:textColor="@color/egg"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Tips:记录完后记得随时保存哟~"
        android:textSize="20sp"
        android:textColor="@color/light_gray"
        />

</RelativeLayout>